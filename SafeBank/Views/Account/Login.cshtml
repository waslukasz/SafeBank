@{
    ViewData["Title"] = "Login";
}
@using SafeBank.Models.ViewModels
@model LoginViewModel

<div class="account-container">
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" method="post" role="form">
        <h1>Login to your account</h1>
        <hr />
        <div class="account-container__panel">
            <div>
                <label asp-for="UserName" class="title"></label>
                <input asp-for="UserName" placeholder="Enter your full name" />
                <span asp-validation-for="UserName" class="hint"></span>
            </div>
            <div>
                <label asp-for="Password" class="title"></label>
                <input asp-for="Password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="hint"></span>
            </div>
            <label class="account-container__panel__rememberme" asp-for="RememberMe">
                <input asp-for="RememberMe" />
                @Html.DisplayNameFor(i => i.RememberMe)
            </label>
            <div></div>
        </div>
        <br />
        <button class="account-container__panel__submit" type="submit">Login</button>
    </form>
</div>